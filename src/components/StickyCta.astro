---
import client from "@data/client.json";
import PhoneIcon from "@components/Icons/PhoneIcon.astro";
---

<aside class="fixed bottom-0 right-0 lg:hidden w-full z-10">
  <a
    class="flex items-center gap-3 text-white justify-center bg-(--primary) py-3 md:py-2"
    href={`tel:${client.phoneForTel}`}
  >
    <PhoneIcon class:list={"text-2xl drop-shadow-md md:text-3xl"} />
    <span class="text-lg text-shadow-lg font-semibold md:text-xl"
      >Call For Service
    </span>
  </a>
</aside>
